<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tblin.firewall"
    android:versionCode="3"
    android:versionName="3.0" >

    <uses-sdk android:minSdkVersion="7" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>  
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />

    <application
        android:name="com.tblin.firewall.FirewallApplication"
        android:icon="@drawable/logo"
        android:label="@string/app_name" >
        <activity android:name=".SettingActivity" >
        </activity>

        <receiver android:name=".IncomingCallReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>

        <service android:name=".ContactSyncService" >
        </service>

        <activity
            android:name=".MainTabActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.preload" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BlockListActivity" >
        </activity>
        <activity android:name=".BlackListActivity" >
        </activity>
        <activity android:name=".SetActivity" >
        </activity>

        <receiver android:name=".FireWallNetListener" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <service android:name=".FireWallService" >
        </service>

        <receiver android:name=".BootReceiver" >
            <intent-filter  android:priority="2147483647" >
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!-- component from embed market -->
        <receiver
            android:name="com.tblin.embedmarket.PackageReceiver"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_REMOVED" />

                <data android:scheme="package" />
            </intent-filter>
        </receiver>
        
   <receiver android:name=".SMSReceiver">
            <intent-filter android:priority="2147483647">
                <action android:name="android.provider.Telephony.SMS_RECEIVED"></action>
               
                
            </intent-filter>
        </receiver>
  
        <activity
            android:name="com.tblin.market.ui.EmbedHome"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.tblin.market.ui.InfosActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity android:name="com.tblin.market.ui.DownLoadUI" />
        <activity android:name="com.tblin.market.ui.LoadManageActivity" />
        <activity
            android:name="com.tblin.market.ui.AppListActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.tblin.market.ui.ViewBigImgActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" />

        <receiver android:name="com.tblin.market.breakdown.LoadBroadcastReceiver" >
            <intent-filter>
                <action android:name="com.tblin.market.breakdown" />
            </intent-filter>
        </receiver>

        <service android:name="com.tblin.market.breakdown.DownloadService" >
        </service>
        <service android:name="com.tblin.market.breakdown.PackageService" >
        </service>
		
        <activity android:name="com.tblin.market.ui.ManageActivity" >
        </activity>
        <activity android:name="com.tblin.market.ui.NewLoadManageActivity" >
        </activity>
        <service android:name=".SmsService"></service>
    </application>

</manifest>