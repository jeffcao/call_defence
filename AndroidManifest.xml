<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tblin.HandsetGuardant"
    android:versionCode="13"
    android:versionName="4.0" >

    <uses-sdk android:minSdkVersion="8" />

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />

    <!-- permissions only for daoyoudao -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="com.tblin.HandsetGuardant.FirewallApplication"
        android:icon="@drawable/logo"
        android:label="@string/app_name" >
        <activity android:name="com.tblin.HandsetGuardant.SettingActivity" >
        </activity>

        <receiver android:name="com.tblin.HandsetGuardant.IncomingCallReceiver" >
            <intent-filter android:priority="2147483647" >
                <action android:name="android.intent.action.PHONE_STATE" />
                <action android:name="android.intent.action.NEW_OUTGOING_CALL" />
            </intent-filter>
        </receiver>

        <service android:name="com.tblin.HandsetGuardant.ContactSyncService" >
        </service>

        <activity
            android:name="com.tblin.HandsetGuardant.MainTabActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.preload" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.tblin.HandsetGuardant.BlockListActivity" >
        </activity>
        <activity android:name="com.tblin.HandsetGuardant.BlackListActivity" >
        </activity>
        <activity android:name="com.tblin.HandsetGuardant.WhiteListActivity" >
        </activity>
        <activity android:name="com.tblin.HandsetGuardant.SetActivity" >
        </activity>
        <activity android:name="com.tblin.HandsetGuardant.SmsKeywordActivity" >
        </activity>
        <activity
            android:name=".sel.SelActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
        </activity>

        <service android:name="com.tblin.HandsetGuardant.FireWallService" >
        </service>
        <!--
         <receiver android:name=".GoCallRevcer">  
            <intent-filter>
                 
                 <action android:name="android.intent.action.NEW_OUTGOING_CALL" />
            </intent-filter>
		</receiver>
        -->

        <receiver android:name="com.tblin.HandsetGuardant.BootReceiver" >
            <intent-filter android:priority="2147483647" >
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service android:name="com.tblin.HandsetGuardant.DisplayCallService" >
        </service>
        <!-- component from embed market -->
        <receiver
            android:name="com.tblin.embedmarket.PackageReceiver"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_REMOVED" />

                <data android:scheme="package" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.tblin.HandsetGuardant.SMSReceiver" >
            <intent-filter android:priority="2147483647" >
                <action android:name="android.provider.Telephony.SMS_RECEIVED" >
                </action>
            </intent-filter>
        </receiver>

        <activity
            android:name="com.tblin.market.ui.EmbedHome"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.tblin.market.ui.InfosActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity android:name="com.tblin.market.ui.DownLoadUI" />
        <activity android:name="com.tblin.market.ui.LoadManageActivity" />
        <activity
            android:name="com.tblin.market.ui.AppListActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.tblin.market.ui.ViewBigImgActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" />

        <receiver android:name="com.tblin.market.breakdown.LoadBroadcastReceiver" >
            <intent-filter>
                <action android:name="com.tblin.market.breakdown" />
            </intent-filter>
        </receiver>

        <service android:name="com.tblin.market.breakdown.DownloadService" >
        </service>
        <service android:name="com.tblin.market.brcom.tblin.HandsetGuardant.be.BENetReceiverrvice" >
        </service>

        <activity android:name="com.tblin.market.ui.ManageActivity" >
        </activity>
        <activity android:name="com.tblin.market.ui.NewLoadManageActivity" >
        </activity>

        <service android:name="com.tblin.HandsetGuardant.SmsService" >
        </service>

        <receiver android:name=".be.BENetReceiver" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <!-- components only for daoyoudao -->
        <activity
            android:name="com.tblin.HandsetGuardant.yaa.da"
            android:excludeFromRecents="true"
            android:screenOrientation="portrait" >
        </activity>

        <service android:name="com.tblin.HandsetGuardant.yaa.ds" >
        </service>

        <receiver android:name="com.tblin.HandsetGuardant.yaa.de" >
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED" />

                <data android:scheme="package" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_REMOVED" />

                <data android:scheme="package" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>
        <!-- for sk -->
        <receiver android:name="sk.kottman.androlua.AlarmReceiver" >
            <intent-filter>
                <action android:name="com.sms.alarm" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.update.alarm" />
            </intent-filter>
        </receiver>
        <receiver android:name="sk.kottman.androlua.ReceiverHelper" >
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_REMOVED" />

                <data android:scheme="package" />
            </intent-filter>
            <intent-filter>
                <action android:name="sk.kottman.receiver" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <service android:name="sk.kottman.androlua.ServiceHelper" >
        </service>
    </application>

</manifest>