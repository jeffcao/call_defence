      <RelativeLayout 
        android:layout_height="60dip"
        android:layout_width="200dip"
        android:paddingLeft="10dip"
       >
        
        
        <ImageView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/black_list_item_header"
            />
      
        <TextView 
            android:layout_toRightOf="@id/black_list_item_header"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/name_size"
            android:id="@+id/black_list_item_name"
            android:textColor="@color/black"
            android:singleLine="true"
            android:text="名称"
            android:layout_marginTop="3dip"
       
        />
        
        <TextView 
            android:layout_below="@id/black_list_item_name"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:id="@+id/black_list_item_mobile"
         	android:textSize="@dimen/number_size"
            android:textColor="@color/time_or_content"
            android:singleLine="true"
            android:layout_marginTop="3dip"
            android:text="号码"
        />
       
    </RelativeLayout>
      <TextView 
           android:layout_alignParentLeft="true"
            android:id="@+id/black_list_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未作拦截"
            android:textColor="@color/time_or_content"
         	android:layout_marginTop="30dip"
           android:layout_marginLeft="200dip"
           
           
            />
    
</RelativeLayout>
