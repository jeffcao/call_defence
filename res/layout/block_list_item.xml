<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/set_linear_selector"
    android:gravity="center"
    android:paddingTop="5dip"
    android:paddingBottom="5dip"
    >
    
 <!--    <ImageView 
        android:layout_height="fill_parent"
        android:layout_width="wrap_content"
        android:src="@drawable/block_header"
        android:layout_marginLeft="10dip"/> -->
    
    <LinearLayout 
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:layout_weight="1">
        
        <TextView 
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_weight="1"
            android:textSize="@dimen/name_size"
            android:id="@+id/block_list_item_name"
             android:textColor="@color/set_connet"
            android:singleLine="true"
            android:text="名称"
        />
        
        <TextView 
            android:layout_marginTop="3dip"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:gravity="left"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:id="@+id/block_list_item_mobile"
            android:textSize="@dimen/number_size"
            android:textColor="@color/time_or_content"
            android:singleLine="true"
            android:text="电话"
        />
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">
        
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="top"
            android:layout_weight="1"
            android:id="@+id/block_list_item_time"
            android:textColor="@color/time_or_content"
            android:singleLine="true"
            android:text="时间"
            
        />
        <TextView
             android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:id="@+id/block_list_item_brond"
            android:text="广东 深圳"
             android:textColor="@color/time_or_content"
            
            />
    </LinearLayout>
    
</LinearLayout>
